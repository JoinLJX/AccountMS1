<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dp"

    >
    <ImageView
        android:id="@+id/editpwdimage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/editpwdicon"
        android:layout_marginTop="86dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPwd"
        android:inputType="textPassword"
        android:hint="请输入密码"
        android:layout_below="@+id/editpwdimage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnsetCancel"
        android:text="取 消"

        android:layout_alignBaseline="@+id/btnSet"
        android:layout_alignBottom="@+id/btnSet"
        android:layout_toRightOf="@+id/editpwdimage"
        android:layout_toEndOf="@+id/editpwdimage" />
    <Button
        android:id="@+id/btnSet"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="设 置"
        android:layout_below="@+id/txtPwd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:layout_toLeftOf="@+id/editpwdimage"
        android:layout_toStartOf="@+id/editpwdimage" />

</RelativeLayout>

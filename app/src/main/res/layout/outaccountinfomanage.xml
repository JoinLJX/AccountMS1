<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:id="@+id/initem"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/infoimage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/addoutaccount"
            android:layout_marginLeft="20dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="支出管理"
            android:textColor="#686765"
            android:textSize="40sp"
            android:textStyle="bold"

            />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#030303" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvInOutMoney"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtInOutMoney"
                android:layout_alignBottom="@+id/txtInOutMoney"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:text="金   额："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtInOutMoney"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="9"
                android:numeric="integer"
                android:layout_above="@+id/txtInOutTime"
                android:layout_toRightOf="@+id/tvInOutMoney"
                android:layout_toEndOf="@+id/tvInOutMoney"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvInOutTime"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtInOutTime"
                android:layout_alignBottom="@+id/txtInOutTime"
                android:layout_toLeftOf="@+id/txtInOutMoney"
                android:text="时   间："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtInOutTime"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:inputType="datetime"
                android:layout_above="@+id/tvInOutType"
                android:layout_toRightOf="@+id/tvInOutTime"
                android:layout_toEndOf="@+id/tvInOutTime"
                android:layout_marginBottom="28dp" />

            <TextView
                android:id="@+id/tvInOutType"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/spInOutType"
                android:layout_alignBottom="@+id/spInOutType"
                android:layout_toLeftOf="@+id/txtInOutTime"
                android:text="类   别："
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spInOutType"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:entries="@array/Type"
                android:textColor="#000000"
                android:layout_above="@+id/txtInOutHandler"
                android:layout_toRightOf="@+id/tvInOutType"
                android:layout_toEndOf="@+id/tvInOutType"
                android:layout_marginBottom="31dp" />

            <TextView
                android:id="@+id/tvInOutHandler"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtInOutHandler"
                android:layout_alignBottom="@+id/txtInOutHandler"
                android:layout_toLeftOf="@+id/spInOutType"
                android:text="付款方："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtInOutHandler"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:layout_marginBottom="30dp"
                android:layout_above="@+id/txtInOutMark"
                android:layout_toRightOf="@+id/tvInOutHandler"
                android:layout_toEndOf="@+id/tvInOutHandler" />

            <TextView
                android:id="@+id/tvInOutMark"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtInOutMark"
                android:layout_alignBottom="@+id/txtInOutMark"
                android:layout_toLeftOf="@+id/txtInOutMark"
                android:layout_toStartOf="@+id/txtInOutMark"
                android:text="备   注："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtInOutMark"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:singleLine="false"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/txtInOutHandler"
                android:layout_alignStart="@+id/txtInOutHandler"
                android:layout_marginBottom="66dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <Button
                android:id="@+id/btnInOutDelete"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:text="删 除"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp" />

            <Button
                android:id="@+id/btnInOutEdit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="修 改"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>